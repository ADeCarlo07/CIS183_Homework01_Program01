<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_v_colorCell_blue"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:text="Blue:"
        android:translationX="180dp"
        android:translationY="15dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_red"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="Red:"
        android:translationX="20dp"
        android:translationY="15dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_green"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="Green:"
        android:translationX="100dp"
        android:translationY="15dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_redNum"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="0"
        android:translationX="55dp"
        android:translationY="23dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_blueNum"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="0"
        android:translationX="215dp"
        android:translationY="23dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_greenNum"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="0"
        android:translationX="145dp"
        android:translationY="23dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hex:"
        android:translationX="20dp"
        android:translationY="70dp" />

    <TextView
        android:id="@+id/tv_v_colorCell_hexNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:translationX="60dp"
        android:translationY="70dp" />
</RelativeLayout>