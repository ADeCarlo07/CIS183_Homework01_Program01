<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:background="#664FA3"
        android:text=" HW01_RGB"
        android:textAlignment="viewStart"
        android:textColor="#FFFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_save"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="16dp"
        android:text="SAVE COLOR"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_v_red"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:max="255"
        android:progress="255"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_v_redNum" />

    <SeekBar
        android:id="@+id/sb_v_green"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="35dp"
        android:max="255"
        android:progress="255"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_v_red" />

    <SeekBar
        android:id="@+id/sb_v_blue"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="33dp"
        android:max="255"
        android:progress="255"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_hex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_v_green" />

    <TextView
        android:id="@+id/tv_v_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"
        android:text="Red:"
        android:textColor="#040404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Green:"
        android:textColor="#040404"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_greenNum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="46dp"
        android:text="Blue:"
        android:textColor="#040404"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_hexRep"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_redNum"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="68dp"
        android:text="255"
        android:textColor="#040404"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_greenNum"
        app:layout_constraintEnd_toEndOf="@+id/tv_v_greenNum"
        app:layout_constraintStart_toEndOf="@+id/tv_v_red"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_v_greenNum"
        android:layout_width="218dp"
        android:layout_height="21dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="68dp"
        android:text="255"
        android:textColor="#040404"
        app:layout_constraintBottom_toBottomOf="@+id/tv_v_blue"
        app:layout_constraintStart_toEndOf="@+id/tv_v_green"
        app:layout_constraintTop_toTopOf="@+id/tv_v_red" />

    <TextView
        android:id="@+id/tv_v_blueNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        android:text="255"
        android:textColor="#040404"
        app:layout_constraintBottom_toTopOf="@+id/sb_v_blue"
        app:layout_constraintStart_toEndOf="@+id/tv_v_blue" />

    <TextView
        android:id="@+id/tv_v_hexRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Hex Representation:"
        android:textColor="#040404"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_hex"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_v_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="17dp"
        android:text="FFFFFF"
        android:textColor="#040404"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_save"
        app:layout_constraintStart_toEndOf="@+id/tv_v_hexRep" />

    <ListView
        android:id="@+id/lv_v_savedColors"
        android:layout_width="409dp"
        android:layout_height="381dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_save" />

</androidx.constraintlayout.widget.ConstraintLayout>